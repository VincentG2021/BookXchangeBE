@model IEnumerable<BookXchangeBE.Models.Membre>

@{
    ViewData["Title"] = "Liste de membres";
}

<h1>Liste de membres</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMembre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pseudo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMembre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pseudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>

            <td>
                <a class ="text-primary " asp-controller="Member" asp-action="GetMember" asp-route-id ="@item.IdMembre" >
                    <i class="bi bi-search"> go to details </i>
                </a>
            </td>
                                    
        </tr>
}
    </tbody>
</table>